# Pine Analytics Frontend Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Linera Testnet Configuration
# =============================================================================

# Linera Faucet URL (Conway Testnet)
VITE_LINERA_FAUCET_URL=https://faucet.testnet-conway.linera.net/

# Application ID (from deployment-testnet.json after running deploy-testnet.ps1)
VITE_LINERA_APPLICATION_ID=

# Chain ID (from deployment-testnet.json)
VITE_LINERA_CHAIN_ID=

# GraphQL endpoint (auto-constructed from chain/app IDs, or override here)
# Format: http://localhost:PORT/chains/CHAIN_ID/applications/APP_ID
VITE_GRAPHQL_ENDPOINT=http://localhost:8080/graphql

# =============================================================================
# Backend Configuration
# =============================================================================

# GraphQL service port
VITE_BACKEND_PORT=8080

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable wallet auto-connect on page load
VITE_WALLET_AUTO_CONNECT=false

# Enable debug logging for Linera operations
VITE_LINERA_DEBUG=false
